{
	"extends": "../../tsconfig.json",
	/* fallback configuration for whole repo */
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ESNext",
		"module": "CommonJS",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"types": ["node"],
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true
	},
	"exclude": ["node_modules" ],
	"include": ["./src/lib.ts", "./src/main.ts"]
}
