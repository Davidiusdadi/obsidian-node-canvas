@tailwind base;
@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;
@tailwind components;
@tailwind utilities;

pre[class*="language-"] {
    padding: 5px !important;
}

body {
    font-size: 14px;
}

.prose code {
    background: white;
    color: #3a3a3a;
    border-radius: 3px;
}

.prose :where(code):not(:where([class~="not-prose"],[class~="not-prose"] *))::before,
.prose :where(code):not(:where([class~="not-prose"],[class~="not-prose"] *))::after {
    content: "" !important;
}

.language-bash {
    position: relative;
    overflow: visible !important;
}

.language-bash::after {
    content: "bash";
    position: absolute;
    right: 0;
    top: -17px;
    font-weight: bold;
    font-size: 1em;
    opacity: 0.5;
}