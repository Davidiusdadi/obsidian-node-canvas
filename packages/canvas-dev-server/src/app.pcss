@tailwind base;
@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;
@tailwind components;
@tailwind utilities;

pre[class*="language-"] {
    padding: 5px !important;
}

body {
    font-size: 14px;
}

.prose code {
    background: white;
    color: #3a3a3a;
    border-radius: 3px;
}

.prose :where(code):not(:where([class~="not-prose"],[class~="not-prose"] *))::before,
.prose :where(code):not(:where([class~="not-prose"],[class~="not-prose"] *))::after {
    content: "" !important;
}